@using Alumni.Models.ViewModel
@model AlumniRegisterViewModel
@{
    ViewData["Title"] = "Alumni Registration";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2><i class="fas fa-user-graduate"></i> Alumni Registration</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="AlumniStudents">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"><i class="fas fa-user"></i> First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"><i class="fas fa-key"></i> Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter a secure password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"><i class="fas fa-key"></i> Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FieldOfStudy" class="form-label"><i class="fas fa-book"></i> Field Of Study</label>
                            <input asp-for="FieldOfStudy" class="form-control" placeholder="Enter your field of study" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="JobPosition" class="form-label"><i class="fas fa-briefcase"></i> Job Position</label>
                            <input asp-for="JobPosition" class="form-control" placeholder="Enter your current job position" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="GraduationDate" class="form-label"><i class="fas fa-calendar-alt"></i> Graduation Date</label>
                            <input asp-for="GraduationDate" type="date" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Company" class="form-label"><i class="fas fa-building"></i> Company</label>
                            <input asp-for="Company" class="form-control" placeholder="Enter the company you work for" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="ProfilePicture" class="form-label"><i class="fas fa-camera"></i> Profile Picture</label>
                            <input asp-for="ProfilePicture" type="file" class="form-control" />
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-check-circle"></i> Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
}
