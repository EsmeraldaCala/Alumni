@{
    ViewData["Title"] = "Welcome";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f0f0;
        color: #333;
    }

    .card {
        width: 50%;
        margin: auto;
        margin-top: 5%;
        padding: 20px;
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

        .card h1 {
            text-align: center;
            color: #0056b3;
            margin-bottom: 20px;
        }

    .option {
        display: flex;
        align-items: center;
        padding: 20px;
        margin: 10px;
        border: 2px solid #0056b3;
        border-radius: 15px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .option:hover {
            background-color: #e0e0e0;
        }

        .option i {
            font-size: 2em;
            margin-right: 20px;
            color: #0056b3;
        }

        .option div {
            font-size: 1.5em;
        }
</style>

<div class="card">
    <h1>Welcome to Alumni Portal</h1>
    <a href="/Account/Login" class="option">
        <i class="fas fa-sign-in-alt"></i>
        <div>Login</div>
    </a>
    <a href="/Account/RegisterAlumni" class="option">
        <i class="fas fa-user-graduate"></i>
        <div>Register as an Alumni</div>
    </a>
    <a href="/Account/RegisterFacultyRep" class="option">
        <i class="fas fa-chalkboard-teacher"></i>
        <div>Register as a Faculty Representative</div>
    </a>
</div>
